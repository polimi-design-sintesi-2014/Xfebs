int x=0;
int y=0;
int val=1;
void setup(){
 size(400,400);
}
  
void draw(){
  println ("questo Ã¨ il valore della x:"+x);
  background(0);
  rect(x,y,50,70);
  ellipse(400-x,400-y,50,50);
 
  y= y+val;
  x=x+val;
  if( y>height-50 || x>width-70){
    val=-1;
  }
 else if(x<0||y<0){
   val=1;
 }
if (x>330){
  fill(255,200,200);
  }
}
